{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "dev"
        },
        {
            "name": "Server",
            "type": "debugpy",
            "request": "launch",
            "module": "omuserver",
            "args": [
                "--debug",
                "--token-file",
                "token.txt",
            ],
            "cwd": "${workspaceFolder}/appdata",
            "justMyCode": true,
            "preLaunchTask": "pyright"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": [
                "Server",
                "Client"
            ],
            "preLaunchTask": "generate-token",
            "stopAll": true
        }
    ],
}